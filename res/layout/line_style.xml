<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/linestyle_textViewPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/linestyle_textViewSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linestyle_textViewPrimary"
        android:layout_below="@+id/linestyle_textViewPrimary"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/linestyle_imageViewStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linestyle_textViewPrimary"
        android:layout_marginRight="26dp"
        android:src="@android:drawable/star_big_off" />

</RelativeLayout>
